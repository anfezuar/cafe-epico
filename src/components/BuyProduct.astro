---
import { generateWhatsAppLink } from '@lib/utils';
import Link from './Link.astro';

const message = "Hola, me gustaría comprar Café Épico.";
const whatsappLink = generateWhatsAppLink(message);
---

<section id="cta" class="w-full py-12 md:py-24 lg:py-32 bg-black text-white">
  <div class="w-full px-4 md:px-6">
    <div class="flex flex-col items-center space-y-4 text-center">
      <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl">
        Únete a la Revolución del Café
      </h2>
      <p class="max-w-[600px] text-gray-300 md:text-xl">
        Prueba Café Épico hoy y experimenta la diferencia. Satisfacción garantizada o te devolvemos tu dinero.
      </p>
      <Link href={whatsappLink} target="_blank" variant="secondary">Comprar ahora</Link>
    </div>
  </div>
</section>
